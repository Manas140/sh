#!/usr/bin/bash

welcome() {
    printf "%s" "\

 _____         _                           _        
/  __ \       | |                         (_)       
| /  \/  ___  | |  ___   _ __  _ __  __ _  _  _ __  
| |     / _ \ | | / _ \ | '__|| '__|/ _\` || || '_ \ 
| \__/\| (_) || || (_) || |   | |  | (_| || || | | |
 \____/ \___/ |_| \___/ |_|   |_|   \__,_||_||_| |_|
                                                    
    Arguments:
        rain [string] [speed]
        -string -> Anything you want to rain!
        -speed -> (OPTIONAL) The seconds you want to delay the print
    Example:
       -> rain \"î‰   \" 0.008
        This will print the an hexagon as fast at 0.008s per print.

"
exit 1
}

# If someone wants to know how to use this
if [[ "$1" == "" ]] ; then
  welcome
fi

#colors
c1="\033[1;30m"
c2="\033[1;31m"
c3="\033[1;32m"
c4="\033[1;33m"
c5="\033[1;34m"
c6="\033[1;35m"
c7="\033[1;36m"
c8="\033[1;37m"
end="\033[1;0m"
colors=( "$c1" "$c2" "$c1" "$c3" "$c1" "$c4" "$c1" "$c6" "$c1" "$c7" "$c1" "$c8" "$c1" )
seed=${#colors[@]}

text="$1"
wait="$2"

while true; do
  color=$(($RANDOM%${seed}))
  printf "${colors[$color]}" 
  printf "$text"
  sleep $wait &> /dev/null
done
printf " \n"
